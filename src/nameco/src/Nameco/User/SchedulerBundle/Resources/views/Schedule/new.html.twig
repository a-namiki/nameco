{% extends '::base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('bundles/namecouserscheduler/css/calendar.css') }}" rel="stylesheet" type="text/css" />
    <link href="{{ asset('bundles/namecouserscheduler/css/register.css') }}" rel="stylesheet" type="text/css" />
    <link href="{{ asset('bundles/namecouserscheduler/css/datepicker.css') }}" rel="stylesheet" type="text/css" />
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/namecouserscheduler/js/schedule.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/namecouserscheduler/js/bootstrap-datepicker.js') }}" type="text/javascript"></script>
{% endblock %}


{% form_theme form 'NamecoUserSchedulerBundle:Form:fields.html.twig' %}

{% block body %}
{{ form_errors(form) }}
<form action="{{ path('schedule_create') }}" method="POST" {{ form_enctype(form) }}>
    <div class="control-group">
        {{ form_label(form.startDateTime) }}
        {{ form_widget(form.startDateTime.date, {'attr': {'class':'span-date'}}) }}
        <a id="btn-startDate" class="link-datepicker" href="#" data-date-format="yyyy/m/d" data-date="{{ startDate.format('Y/m/d')|date('Y/m/d') }}">■</a>
        {{ form_widget(form.startDateTime.time, {'attr': {'class':'span1 inline-inputs'}}) }}
    </div>

    <div class="control-group">
        {{ form_label(form.endDateTime) }}
        {{ form_widget(form.endDateTime.date, {'attr': {'class':'span-date'}}) }}
        <a id="btn-endDate" class="link-datepicker" href="#" data-date-format="yyyy/m/d" data-date="{{ startDate.format('Y/m/d')|date('Y/m/d') }}">■</a>
        {{ form_widget(form.endDateTime.time, {'attr': {'class':'span1'}}) }}
    </div>
    
    <div class="control-group">
        {{ form_label(form.title) }}
        {{ form_widget(form.title, {'attr': {'class':'span6'}}) }}
    </div>
    
    <div class="control-group">
        {{ form_label(form.detail) }}
        {{ form_widget(form.detail, {'attr': {'class':'span6'}}) }}
    </div>
    
    <div class="control-group">
        {{ form_widget(form.out) }}
    </div>
    
    <div class="control-group">
    <button type="button" id="btn-participant" class="btn btn-primary btn-fixed">参加者</button>
    </div>
    <div class="control-group">
    <button type="button" id="establishment" class="btn btn-primary btn-fixed">施設</button>
    </div>
    <div class="control-group pull-right">
        <button type="submit" class="btn btn-primary btn-fixed">登録</button>
        <button type="button" class="btn btn-fixed">キャンセル</button>
    </div>
    {{ form_rest(form) }}
</form>
{% endblock %}