{% extends "::base.html.twig" %}

{% block stylesheets %}
	{{ parent() }}
	<link href="{{ asset('bundles/namecouserscheduler/css/calendar.css') }}" rel="stylesheet" type="text/css" />
	<link href="{{ asset('bundles/namecouserscheduler/css/navigation.css') }}" rel="stylesheet" type="text/css" />
	<link href="{{ asset('bundles/namecouserscheduler/css/datepicker.css') }}" rel="stylesheet" type="text/css" />
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	<script src="{{ asset('bundles/namecouserscheduler/js/bootstrap-datepicker.js') }}" type="text/javascript"></script>
	<script src="{{ asset('bundles/namecouserscheduler/js/locales/bootstrap-datepicker.ja.js') }}" type="text/javascript" charset="UTF-8"></script>
	<script src="{{ asset('bundles/namecouserscheduler/js/navigation.js') }}" type="text/javascript"></script>
{% endblock %}

{% block body %}
	<div id="contents" class="clearfix">
		<div id="left_pane">
			<div id="main_menu">
				<a class="btn btn-primary btn-large" href="{{ path('schedule_month') }}">スケジュール</a>
				<a class="btn btn-primary btn-large" href="{{ path('establishment_month') }}">施設予約</a>
			</div>
			<div id="sub_menu">
				{% block submenu %}
				{% endblock submenu %}
			</div>
		</div>
		
		{% block calendar %}
		{% endblock %}
	</div>
	<span id="schedule_new_prefix" style="display:none;">{{ path('nameco_schedule_new_prefix') }}</span>
{% endblock body%}
